<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- the theme applied to the application or activity -->
    <style name="NextInpactTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Thème de l'action Bar -->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/NextInpactActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NextInpactActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="NextInpactActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Image de fond -->
        <item name="android:background">@drawable/actionbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <!-- Taille de texte personalisée -->
    <style name="textAppearanceMicro" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>
</resources>